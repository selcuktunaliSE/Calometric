generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  age       Int
  gender    String
  height    Float
  weight    Float
  entries   Entry[]
}

model Entry {
  id          Int      @id @default(autoincrement())
  userId      Int
  foodName    String
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}